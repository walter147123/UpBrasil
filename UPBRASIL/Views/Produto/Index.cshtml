@model IEnumerable<UPBRASIL.Models.Produtos>

@{
    ViewData["Title"] = "Index";
}



<p class="btn btn-warning"  >
    <a asp-action="Create" style="text-decoration: none;">Cadastra Produto</a>
</p>
<p class="form-group">
    Pesquisar por Nome
    @using (Html.BeginForm("Index", "Produto", FormMethod.Get))
    {
        @Html.TextBox("Pesquisa")
        <input  class="form-group" type="submit" value="Pesquisar" />        
    }

</p>
    <div id="table-wrapper">
  <div id="table-scroll">  
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="fa fa-pencil-square-o" aria-hidden="true"></a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="fa fa-search-plus" aria-hidden="true"></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="fa fa-trash" aria-hidden="true"></a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>

</div>
